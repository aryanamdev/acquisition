{
  "$schema": "https://www.schemastore.org/tsconfig",
  "display": "Node 24",
  "_version": "24.0.0",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "#config/*": ["src/config/*"],
      "#routes/*": ["src/routes/*"],
      "#controllers/*": ["src/controllers/*"],
      "#middleware/*": ["src/middleware/*"],
      "#models/*": ["src/models/*"],
      "#services/*": ["src/services/*"],
      "#utils/*": ["src/utils/*"],
      "#validations/*": ["src/validations/*"]
    },
    "lib": [
      "es2024",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Iterator",
      "ESNext.Promise"
    ],
    "module": "nodenext",
    "target": "es2024",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "outDir": "./dist"
    
  },
    "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
  
}
